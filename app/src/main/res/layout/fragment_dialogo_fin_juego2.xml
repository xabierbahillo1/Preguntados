<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialogs.DialogoFinJuego2Fragment">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="162dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finJuegoToolbar"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textPuntuacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="PuntuaciÃ³n: 400 puntos"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPreguntasAcertadas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="5 respuestas correctas"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textPreguntasIncorrectas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1 respuesta incorrecta"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonCerrarDialog2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/boton_redondeado"
            android:text="@string/finjuego_continuar" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/finJuegoToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/finDelJuego2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="@string/finjuego_title"
        android:textColor="#0F97A1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/finJuegoToolbar"
        app:layout_constraintEnd_toEndOf="@+id/finJuegoToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/finJuegoToolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>